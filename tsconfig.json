{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "App.tsx",
        "index.tsx",
        "types.ts",
        "components/**/*",
        "services/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "server",
        "**/*.test.ts",
        "**/*.spec.ts",
        "test_binance.js"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}